// ============================================
// CFLD (Cluster Front Line Demonstration) MODELS
// ============================================

model Season {
  seasonId   Int             @id @default(autoincrement()) @map("season_id")
  seasonName String          @unique @map("season_name")
  cfldCrops  FLDCropMaster[]
  craCropingSystems CraCropingSystem[]
  craFarmingSystems CraFarmingSystem[]

  @@map("season")
  @@index([seasonId])
  @@index([seasonName])
}

model CropType {
  typeId    Int             @id @default(autoincrement()) @map("type_id")
  typeName  String          @unique @map("type_name")
  cfldCrops FLDCropMaster[]

  @@map("crop_type")
  @@index([typeId])
  @@index([typeName])
}

model FLDCropMaster {
  cfldId   Int      @id @default(autoincrement()) @map("cfld_id")

  seasonId Int      @map("season_id")
  season   Season   @relation(fields: [seasonId], references: [seasonId])

  typeId   Int      @map("type_id")
  cropType CropType @relation(fields: [typeId], references: [typeId])

  CropName String   @map("crop_name")

  @@map("fld_crop_master")
  @@index([cfldId])
  @@index([seasonId])
  @@index([typeId])
  @@index([CropName])
}
